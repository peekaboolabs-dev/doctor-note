# 임베딩 모델 설정
EMBEDDING_MODEL=jhgan/ko-sroberta-multitask

# ChromaDB 설정
CHROMA_PERSIST_DIR=/app/data/embeddings/chroma_medical_db
CHROMA_COLLECTION_NAME=korean_medical_qa

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=/app/logs/medical_rag.log

# API 설정 (향후)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Ollama 설정
# 로컬 개발 환경 (Mac/Windows)
OLLAMA_HOST=host.docker.internal
# AWS 프로덕션 환경
# OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=solar

# 환경 설정
ENVIRONMENT=development  # development | production

# 보안 설정 (향후)
# API_KEY=your-api-key-here
# SECRET_KEY=your-secret-key-here